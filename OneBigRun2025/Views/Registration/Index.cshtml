@{
    ViewData["Title"] = "One Big Run 2025 - Register";
}

@model OneBigRun2025.Models.UserModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white min-h-screen flex flex-col items-center justify-center">

    <!-- Header -->
    <header class="relative w-full h-64 mb-8">
        <!-- Blurred Background -->
        <div class="absolute inset-0">
            <img src="~/images/header.png" alt="Blurred Background" class="w-full h-full object-cover filter blur-md scale-105">
        </div>

        <!-- Foreground Image -->
        <div class="absolute inset-0 flex items-center justify-center">
            <img src="~/images/header.png" alt="One Big Run 2025 Banner" class="w-auto h-48 object-contain drop-shadow-lg">
        </div>
    </header>

    <!-- Registration Form Container -->
    <div class="container mx-auto flex items-center justify-center gap-4">
        <!-- Registration Form -->
        <div class="bg-white shadow-lg rounded-3xl p-8 w-full max-w-4xl">
            <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">One Big Run 2025 Registration</h2>

            <form asp-action="Register" method="post" class="space-y-6">
                <!-- Full Name -->
                <div class="flex flex-col mb-4">
                    <label for="Name" class="block text-gray-700 font-medium mb-2">Full Name:</label>
                    <input type="text" id="Name" name="Name" value="@Model.Name" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Age and Email (flex layout for two columns) -->
                <div class="flex space-x-4">
                    <!-- Age -->
                    <div class="flex-1">
                        <label for="Age" class="block text-gray-700 font-medium mb-2">Age:</label>
                        <input type="number" id="Age" name="Age" value="@Model.Age" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-red-500 text-sm" })
                    </div>

                    <!-- Email -->
                    <div class="flex-1">
                        <label for="PhoneNumber" class="block text-gray-700 font-medium mb-2">Phone Number:</label>
                        <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <!-- Phone Number -->
                <div class="flex flex-col mb-4">
                    <label for="Email" class="block text-gray-700 font-medium mb-2">Email:</label>
                    <input type="email" id="Email" name="Email" value="@Model.Email" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-500 text-sm" })

                </div>

                <!-- Shirt Size and Category (flex layout for two columns) -->
                <div class="flex space-x-4">
                    <!-- Shirt Size -->
                    <div class="flex-1">
                        <label for="ShirtSize" class="block text-gray-700 font-medium mb-2">Shirt Size:</label>
                        <select id="ShirtSize" name="ShirtSize"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="Small">Small</option>
                            <option value="Medium">Medium</option>
                            <option value="Large">Large</option>
                            <option value="Extra Large">Extra Large</option>
                        </select>
                        @Html.ValidationMessageFor(m => m.ShirtSize, "", new { @class = "text-red-500 text-sm" })
                    </div>

                    <!-- Category -->
                    <div class="flex-1">
                        <label for="Category" class="block text-gray-700 font-medium mb-2">Category:</label>
                        <select id="Category" name="Category"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="3K">3K</option>
                            <option value="5K">5K</option>
                            <option value="10K">10K</option>
                            <option value="21K">21K</option>
                            <option value="42K">42K</option>
                        </select>
                        @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <!-- Buttons for submission -->
                <div class="flex justify-center mt-6 gap-5">
                    <button type="submit" formaction="/Registration/RegisterWithAdo"
                            class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition duration-300">
                        Submit with ADO.NET
                    </button>
                    <button type="submit" formaction="/Registration/RegisterWithOrm"
                            class="bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700 transition duration-300">
                        Submit with ORM
                    </button>
                </div>
            </form>
        </div>
    </div>


    <!-- Footer -->
    <footer class="bg-blue-900 text-white py-6 mt-8 w-full">
        <div class="container mx-auto px-6 text-center">
            <p>Thank you for supporting the One Big Run 2025 event. Let's run for a cause!</p>
        </div>
    </footer>

</body>
</html>

           


